Format 11
Input stdclass.inc

SecNumDepth             3
TocDepth                3

# Style for frontmatter
Style "Project Group"
	CopyStyle	"Author"
	Category	FrontMatter
	InTitle		1
	LatexType	Command
	LatexName	projectgroup
	LeftMargin	Groupx
	LabelSep	x
	LabelType	Static
	LabelString	"Group "
	Align		Center
End

# Rename the abstract as the summary
Style "Summary"
	CopyStyle	"Abstract"
	LabelString	"Summary"

	# If we use Babel, and British is enabled, then this is necessary to make
	# the renaming work
	Preamble
	\AtBeginDocument{%
	\addto\captionsbritish{%
	\renewcommand{\abstractname}{Summary}%
	}}
	EndPreamble
End

NoStyle Abstract
NoStyle Chapter
NoStyle Chapter*

Style Part
	Align                 Left
	AlignPossible         Left
	TopSep                2
	BottomSep             1.5
	Font
	  Size                Larger
	EndFont
End


Style Part*
	Align                 Left
	AlignPossible         Left
	TopSep                2
	BottomSep             1.5
	Font
	  Size                Larger
	EndFont
End

